<%= form_for @recipe do |f| %>
  <%=f.label :title%>
  <%=f.text_field :title%><br>
  <%=f.label :ingredients%>
  <%=f.fields_for :ingredients do |ingred|%><br>
    <%=f.label :name%>
    <%=ingred.text_field :name%><br>
    <%=f.label :quantity%>
    <%=ingred.text_field :quantity%><br>
  <%end%>
  <%=f.submit%>
<%end%>
